@model IEnumerable<TravelSocialApp.Models.Story>

@{
    ViewData["Title"] = "Stories";
}

<div class="row mb-4 align-items-center">
    <div class="col">
        <h1 class="display-4">Travel Stories</h1>
        <p class="lead text-muted">Share your adventures and connect with others.</p>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-lg"></i> Share Story
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top" alt="Story Image" onerror="this.style.display='none'">
                }
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">@item.User?.UserName</small>
                        <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                    </div>
                    <p class="card-text">@item.Content</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <button class="btn btn-sm btn-outline-secondary">Like</button>
                    <button class="btn btn-sm btn-outline-secondary">Comment</button>
                </div>
            </div>
        </div>
    }
</div>
