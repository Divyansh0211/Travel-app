@model IEnumerable<TravelSocialApp.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="row mb-4">
    <div class="col">
        <h1>My Bookings</h1>
        <p class="text-muted">Manage your upcoming trips.</p>
    </div>
    <div class="col-auto">
        <a asp-controller="Destinations" asp-action="Index" class="btn btn-primary">Book New Trip</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-light text-center p-5">
        <h4>No bookings yet</h4>
        <p>You haven't booked any trips yet. Start exploring destinations!</p>
        <a asp-controller="Destinations" asp-action="Index" class="btn btn-outline-primary mt-2">Explore Destinations</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-start border-4 border-primary shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Destination?.Name</h5>
                        <p class="card-text text-muted mb-2">
                            <i class="bi bi-calendar-event"></i> Travel Date: @item.TravelDate.ToShortDateString()
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Booked on: @item.BookingDate.ToShortDateString()</small>
                        </p>
                        <span class="badge bg-success">Confirmed</span>
                    </div>
                </div>
            </div>
        }
    </div>
}
