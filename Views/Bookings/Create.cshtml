@model TravelSocialApp.Models.Booking

@{
    ViewData["Title"] = "Confirm Booking";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">Confirm Your Trip</h3>
            </div>
            <div class="card-body p-4">
                @if (ViewData["DestinationName"] != null)
                {
                    <div class="alert alert-info">
                        Booking for: <strong>@ViewData["DestinationName"]</strong>
                    </div>
                }

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DestinationId" />

                    <div class="mb-3">
                        <label asp-for="TravelDate" class="form-label">Travel Date</label>
                        <input asp-for="TravelDate" class="form-control" type="date" />
                        <span asp-validation-for="TravelDate" class="text-danger"></span>
                        <div class="form-text">Please select your preferred departure date.</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Confirm Booking</button>
                        <a asp-controller="Destinations" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
